<div class="col-sm-6">
  <h3>Salons</h3>
  <ul class="salons">
    <% for(var i=0; i< salonCollection.length; i++) {%>
      <% if (salonCollection[i].feeling === "love it") {%>
        <li class="salon">
          <span><%= salonCollection[i].salonName %></span>
          <span><%= salonCollection[i].location %></span>
          <span><%= salonCollection[i].thumbUp %></span>
          <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
          <span><i class="fa fa-trash" aria-hidden="true"></i></span>

        </li>
        <% } %>
        <% } %>
      </ul>

      <h2>Add a salon:</h2>
      <% if (user.local.email) { %>
        <form action="/newSalon" method="POST">
          <input readonly type="text" value="<%= user.local.email %>" name="userName">
          <input type="text" placeholder="Enter a salon name" name="salonName">
          <input type="text" placeholder="Enter salon location" name="location">
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>

    </div>


    <script src="main.js"></script>
